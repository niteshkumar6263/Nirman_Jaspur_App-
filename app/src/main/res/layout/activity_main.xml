<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_login_advanced">

    <!-- layer container for top area (glow, waves, crane, title) -->
    <FrameLayout
        android:id="@+id/top_area"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- subtle moving radial highlight (vector rotated) -->
        <ImageView
            android:id="@+id/glow_big"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:src="@drawable/decor_radial_glow"
            android:contentDescription="@null"
            android:translationY="-48dp"
            android:alpha="0.55"/>

        <!-- diagonal texture overlay for tactile depth -->
        <ImageView
            android:id="@+id/diagonal_texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/decor_diagonal_stripes"
            android:contentDescription="@null"
            android:alpha="0.06"/>

        <!-- top wave detail (keeps original wave look but blended) -->
        <ImageView
            android:id="@+id/top_wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_top_wave"
            android:contentDescription="@null"
            android:alpha="0.28"
            android:scaleType="centerCrop"/>

        <!-- Logo (keeps center alignment) -->
<!--        <ImageView-->
<!--            android:id="@+id/logo"-->
<!--            android:layout_width="102dp"-->
<!--            android:layout_height="90dp"-->
<!--            android:layout_gravity="center_horizontal|top"-->
