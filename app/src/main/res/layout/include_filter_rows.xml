<?xml version="1.0" encoding="utf-8"?>
<!-- include_filter_rows.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_job_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="--Select job type--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/jobTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_work_dept"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="--Select work department--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/workDepartmentSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_engineer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="--Select Engineer--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/engineerSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_plan"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="--Select a plan--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/planSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_work_agency"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="--Select Work Agency--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/workAgencySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_area"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="--Select area--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/areaSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_city"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="--Select City--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/citySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_ward"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="--Select Ward--"
            app:boxStrokeColor="@color/primary"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

            <AutoCompleteTextView
                android:id="@+id/wardSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- Date picker field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="dd-mm-yyyy"
        app:boxStrokeColor="@color/primary"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:textColor="@color/text_primary" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
