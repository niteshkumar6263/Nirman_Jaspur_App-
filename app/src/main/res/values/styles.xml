<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar text appearance used by layouts (matches Material3 scale) -->
    <style name="ToolbarTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <!-- you can tune the size/weight here -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- A lightweight Toolbar style so @style/Toolbar resolves -->
    <style name="Toolbar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <!-- Widget version used by toolbarStyle attribute (optional, recommended) -->
    <style name="Widget.Toolbar.Nirman" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
